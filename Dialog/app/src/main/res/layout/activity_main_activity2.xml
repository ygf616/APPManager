<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ygf616.dialog.MainActivity2">
    <Button
        android:id="@+id/btn2"
        android:text="自定义对话框"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnClick"/>

    <Button
        android:id="@+id/btn4date"
        android:text="日期选择对话框"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btn4dateClick"/>

    <Button
        android:id="@+id/btn4time"
        android:text="时间选择对话框"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btn4timeClick"/>

    <Button
    android:id="@+id/btn4popup"
    android:text="popupWindow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="btn4popupClick"/>

    <Button
        android:id="@+id/btn4activity"
        android:text="btn4activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btn4activityClick"/>


    <Button
        android:id="@+id/btn4process"
        android:text="进度条"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="btn4processClick"/>


</LinearLayout>
